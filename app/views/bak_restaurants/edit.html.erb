

<% provide(:title, "Edit restaurant") %>

<h1>Update your data</h1>

<div class="row">
  <div class="span6 offset3">

    <%= form_for(@restaurant) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :info %>
      <%= f.text_field :info %>

      <%= f.label :lat_dec %>
      <%= f.text_field :lat_dec %>

      <%= f.label :long_dec %>
      <%= f.text_field :long_dec %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>


