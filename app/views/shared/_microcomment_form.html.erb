

<%= form_for(@microcomment) do |f| %>


  <%= render 'shared/error_messages', object: f.object %>


  <%= f.label :owner,                  "Owner" %>
  <%= f.text_field :owner %>

  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new microcomment..." %>
  </div>

  <%= f.submit "Post", class: "btn btn-large btn-primary" %>

<% end %>


